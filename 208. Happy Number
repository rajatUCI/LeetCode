class Solution {
public:
    bool isHappy(int n) {
        int sum = 0;
        int count = 0;
        int digit = 0;
        while(sum != 1){
            count++;
            sum = 0;
            while(n > 0){
                digit = n % 10;
                n = n/10;
                sum += (digit*digit);
            }
            n = sum;

            if(count > 15){
                return false;
            }
                
        }
        return true;
    }
};